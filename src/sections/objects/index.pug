      .objects__filter
        .mob
          +btn('На карте','primary', '','','location')(class="action")
          +btn('Фильтры','primary', '','','filter')(class="action")
        .desc: .filter-actions
          .select(data-sel data-label="Выберите" )
            input(type="text" hidden name="PROP3")
            .select__label Выберите ЖК
            .select__head Любой
            .select__body 
              .select__body-wrapper
                .select__options
                  div(data-val='09:00 — 12:00') 09:00 — 12:00
