.modal(data-animate-open="fadeIn" data-animate-close="fadeOut" id="banks" class="animate__faster")      
  .popup.bottom-sheet
    .sheet-header
      .drag-handle
    +iconbtn('close', 'secondary')(class="popup__close bottom-sheet__close" data-target="banks" data-action="close")
    .popup__wrapper.sheet-content
      .thanks
        .thanks__top
          img(src=require('/assets/images/thanks.png'), alt="test") 
        .thanks__bottom
          .thanks__descr
            h3.thanks__title Благодарим за заявку
            p.thanks__text Наш специалист свяжется с вами, чтобы ответить на все вопросы о квартирах, ипотеке и спецпредложениях 
          +btn('Понятно','primary2', '')( class="thanks__btn" data-target="banks" data-action="close")